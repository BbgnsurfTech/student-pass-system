# Student Pass System Environment Configuration
# Copy this file to .env and update the values

# Application
NODE_ENV=production
PORT=3000
APP_NAME="Student Pass System"
APP_URL=https://studentpass.com
API_URL=https://api.studentpass.com

# Database
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
POSTGRES_DB=student_pass_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here

# Redis
REDIS_URL=redis://:password@redis-service:6379
REDIS_PASSWORD=secure_redis_password

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=student-pass-assets
S3_BACKUP_BUCKET=student-pass-backups

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@studentpass.com
SMTP_PASS=email_password
FROM_EMAIL=noreply@studentpass.com

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
CORS_ORIGIN=https://studentpass.com,https://www.studentpass.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true

# Session
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600

# QR Code
QR_CODE_SIZE=200
QR_CODE_MARGIN=4

# Development
DEBUG=student-pass:*
HOT_RELOAD=false

# Backup
BACKUP_SCHEDULE="0 2 * * *"
RETENTION_DAYS=30

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ENABLE_NOTIFICATIONS=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASS_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_PANEL=true

# Performance
CACHE_TTL=300
ENABLE_COMPRESSION=true
ENABLE_ETAG=true