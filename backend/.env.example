# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/student_pass_db"
DATABASE_MIGRATE_ON_START=true

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION_TIME="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRATION_TIME="7d"

# QR Code Security
QR_SECRET_KEY="your-qr-code-secret-key-change-this-in-production"

# Application Configuration
NODE_ENV="development"
PORT=3000
API_PREFIX="api/v1"
APP_VERSION="1.0.0"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
ALLOWED_DOCUMENT_TYPES="application/pdf,image/jpeg,image/png"

# AWS S3 Configuration (for file storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="student-pass-system-files"
AWS_S3_ENDPOINT=""  # Optional: for S3-compatible services

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="Student Pass System <noreply@studentpass.com>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_ENABLED=true
LOG_FILE_PATH="logs/app.log"

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_ITEMS=1000

# Session Configuration
SESSION_SECRET="your-session-secret-change-this-in-production"
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Password Security
BCRYPT_ROUNDS=12

# File Storage Paths (if using local storage instead of S3)
UPLOAD_PATH="uploads"
STATIC_PATH="public"

# Webhook Configuration (for integrations)
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_TIMEOUT=30000  # 30 seconds

# External Integrations
SIS_API_URL=""  # Student Information System API
SIS_API_KEY=""
CARD_READER_API_URL=""
CARD_READER_API_KEY=""

# Development/Testing
SEED_DATABASE=false
MOCK_EXTERNAL_SERVICES=true

# Production Security
REQUIRE_HTTPS=false  # Set to true in production
TRUST_PROXY=false   # Set to true if behind reverse proxy

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=""
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=""

# Feature Flags
ENABLE_BULK_OPERATIONS=true
ENABLE_TEMPORARY_PASSES=true
ENABLE_QR_CUSTOMIZATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true