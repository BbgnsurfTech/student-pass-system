# Database Configuration
DATABASE_URL="postgresql://student_user:student_pass_2024@localhost:5432/student_pass_db"
DATABASE_MIGRATE_ON_START=false

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="dev-jwt-secret-change-this-in-production-super-secret-key-2024"
JWT_EXPIRATION_TIME="15m"
JWT_REFRESH_SECRET="dev-refresh-secret-change-this-in-production-super-secret-key-2024"
JWT_REFRESH_EXPIRATION_TIME="7d"

# QR Code Security
QR_SECRET_KEY="dev-qr-code-secret-key-change-this-in-production-2024"

# Application Configuration
NODE_ENV="development"
PORT=3000
API_PREFIX="api/v1"
APP_VERSION="1.0.0"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:5173"

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
ALLOWED_DOCUMENT_TYPES="application/pdf,image/jpeg,image/png"

# AWS S3 Configuration (for file storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_S3_ENDPOINT=""

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="Student Pass System <noreply@studentpass.com>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true

# Logging Configuration
LOG_LEVEL="debug"
LOG_FILE_ENABLED=true
LOG_FILE_PATH="logs/app.log"

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_ITEMS=1000

# Session Configuration
SESSION_SECRET="dev-session-secret-change-this-in-production-2024"
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Password Security
BCRYPT_ROUNDS=12

# File Storage Paths (if using local storage instead of S3)
UPLOAD_PATH="uploads"
STATIC_PATH="public"

# Development/Testing
SEED_DATABASE=true
MOCK_EXTERNAL_SERVICES=true

# Production Security
REQUIRE_HTTPS=false
TRUST_PROXY=false