# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api/v1
EXPO_PUBLIC_WS_URL=ws://localhost:3000

# App Configuration
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUILD_NUMBER=1

# Expo Project Configuration
EXPO_PUBLIC_PROJECT_ID=your-expo-project-id
EXPO_PUBLIC_OWNER=your-expo-account

# Environment
NODE_ENV=development
EXPO_PUBLIC_ENVIRONMENT=development

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true

# External Services
EXPO_PUBLIC_SENTRY_DSN=
EXPO_PUBLIC_ANALYTICS_API_KEY=
EXPO_PUBLIC_MAPS_API_KEY=

# Security
EXPO_PUBLIC_ENCRYPTION_KEY=your-encryption-key-here
EXPO_PUBLIC_API_TIMEOUT=10000

# Deep Linking
EXPO_PUBLIC_DEEP_LINK_SCHEME=studentpass
EXPO_PUBLIC_UNIVERSAL_LINK_DOMAIN=studentpass.yourinstitution.edu

# Push Notifications
EXPO_PUBLIC_FCM_SENDER_ID=
EXPO_PUBLIC_APNS_KEY_ID=

# Social Authentication (if needed)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=
EXPO_PUBLIC_APPLE_CLIENT_ID=

# Development
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_API=false